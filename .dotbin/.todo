#!/usr/bin/env zsh -f


###############################################################################
# COLORS                                                                      #
###############################################################################

white='\033[0;37m'
red='\033[0;31m'
green='\033[0;32m'
yellow='\033[0;33m'
blue='\033[0;34m'

# Resets the style
reset=`tput sgr0`

# Color-echo. Improved. [Thanks @joaocunha]
# arg $1 = message
# arg $2 = Color
cecho() {
  echo "${2}${1}${reset}"
  return
}


###############################################################################
# FRIENDLY REMINDER OF THINGS TO DO                                           #
###############################################################################

# Clear the screen
clear && printf '\e[3J'

echo ""
cecho "

   Remember..." $white
sleep 2
cecho "

   You have a TODO list." $white
sleep 2

echo "

"
cecho "   ###################################################" $blue
cecho "   #                                                 #" $blue
cecho "   $blue#  $white • Restore Preferences from your backup       $blue #"
cecho "   $blue#                                                $blue #"
cecho "   $blue#  $white • Install Dropbox then run'mackup restore'   $blue #"
cecho "   #                                                 #" $blue
cecho "   $blue#  $white • Logout or restart                          $blue #"
cecho "   #                                                 #" $blue
cecho "   ###################################################" $blue
echo ""
sleep 4
read -p "   Press enter to continue"
